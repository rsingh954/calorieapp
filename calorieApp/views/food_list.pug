extends layout

block content

  if error
    p Error getting dynamic content.
  else
  div.container
    each item, i in items
        div.panel
          a.panel-heading.heading(href = '/food'+item.fdcId )  #{item.description}
          h5 Made By: #{item.brandName}
          div.panel-body
          each n in item.foodNutrients
            h6.list-group-item #{n.nutrientName} : #{n.value}      
          hr



  hr
  a(href='#') Create Item