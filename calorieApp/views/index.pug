extends layout

block content
  if error
    p Error getting dynamic content.
  else
  a(href='/journal' class = 'panel-heading') Add a Journal 
  .container(style = "padding:5px;")
    div.diary 
      h1= title
      p=date
      hr
      h6 #{items.date}
    div.card-container
      each item in items
        div.card-w-75 
          .card-body 
            div.card-header #{item.date}
              div.card-w-75
            each m in item.foods
              div.card-header #{m.name}
              li.list-group-item Calories: #{m.calories}g
              li.list-group-item Protein: #{m.protein}g
              li.list-group-item Carbohydrates: #{m.carbohydrates}g

        




  
