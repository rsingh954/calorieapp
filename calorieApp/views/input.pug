extends layout 

block content
  if errors
    ul
    div.error
      for error in errors
        li.warning!= error.msg
  div.search_container
    h1 Search for a food item to add to your journal   
    form(method='POST' action='')
      div.form-search
        img(class ='search-icon' src='/images/search.png' alt ='search-icon')
        input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' aria-describedby="inputGroup-sizing-sm" value=(undefined===item ? '' : item.name)  )
      hr